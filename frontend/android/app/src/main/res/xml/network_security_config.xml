<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext (HTTP) traffic for development/testing only -->
    <!-- Remove this for production if not needed -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>

    <!-- Allowed domains for API calls -->
    <domain-config cleartextTrafficPermitted="false">
        <!-- Supabase -->
        <domain includeSubdomains="true">supabase.co</domain>
        <domain includeSubdomains="true">supabase.com</domain>

        <!-- Google APIs (Gemini, AdMob) -->
        <domain includeSubdomains="true">googleapis.com</domain>
        <domain includeSubdomains="true">google.com</domain>

        <!-- OpenAI API -->
        <domain includeSubdomains="true">openai.com</domain>
    </domain-config>
</network-security-config>
